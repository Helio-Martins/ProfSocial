screen chat_exit:
    imagebutton:
        #xalign 0.01 yalign 0.005 at rot(90)
        xalign 0.01 yalign 0.005
        idle im.Scale("x_idle.png", 75, 75)
        hover im.Scale("x_hover.png", 75, 75)
        hovered [Function(get_mouse), SetVariable("tooltiper", True)]
        unhovered SetVariable("tooltiper", False)
        action Jump("chat_exit")
        focus_mask True
    if tooltiper:
        timer 0.03 repeat tooltiper action Function(get_mouse)
        frame:
            xpos mouse_xy[0] ypos mouse_xy[1]-50
            text "Deixar de ouvir"

