label pass_time_dialogue:
    #$ time_passed_dialogue += 15
    $ seconds += 15
    if seconds > 59:
        $ seconds -= 60
        $ minutes += 1
        $ fakeminutes = minutes
        if minutes > 59:
            jump chat_exit
    return

label setup_dialogue(chat_image):
    call toggle_UI
    show screen clock_UI
    $ st_actions[intervalo] += "Diálogo: " + chat_image[8] + chat_image[9] + '\n'
    $ time_passed_dialogue = 0
    $ n_chats += 1
    call set_scene(current_room, True)
    show image "chats/session_"+str(session)+"/"+chat_image+".png":
        zoom 2
        xalign 0.5
        yalign 0.2
    show screen chat_exit
    return

